<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/number4Text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="69"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/name4Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/full_names"
        android:text="car 54"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/number4Text"
        app:layout_constraintTop_toTopOf="@id/number4Text"
        app:layout_constraintBottom_toTopOf="@+id/bikeText"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/lapNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/name4Text"
        app:layout_constraintBaseline_toBaselineOf="@id/name4Text"
        android:layout_marginStart="10dp"
    />

    <TextView
        android:id="@+id/bikeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Honda CRF250"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/number4Text"
        app:layout_constraintStart_toEndOf="@id/number4Text"
        android:layout_marginStart="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>